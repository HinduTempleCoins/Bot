# Discord Bot Token
# Get from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Gemini API Key (FREE - 1,000 requests/day with gemini-2.5-flash-lite)
# Get from: https://aistudio.google.com/app/apikey
# NOTE: Bot uses gemini-2.5-flash-lite model (1,000/day, 15 RPM)
# NOTE: Bot also uses Wikipedia (unlimited) first to reduce API calls
# Source: https://blog.laozhang.ai/api-guides/gemini-api-free-tier/
GEMINI_API_KEY=your_gemini_api_key_here

# Google Custom Search API (OPTIONAL - 100 searches/day FREE)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_custom_search_engine_id_here

# YouTube Data API (OPTIONAL - 10,000 quota/day FREE)
# Get from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Maps API (OPTIONAL - geocoding and location search)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Discord Channel IDs (get by right-clicking channel with Developer Mode enabled)
PRICE_ALERT_CHANNEL_ID=your_price_alert_channel_id_here
ANNOUNCEMENT_CHANNEL_ID=your_announcement_channel_id_here

# ========================================
# HIVE TRADING BOT CONFIGURATION
# ========================================

# HIVE Account Credentials
# WARNING: Keep these secret! Never commit to Git!
HIVE_USERNAME=your_hive_username
HIVE_ACTIVE_KEY=your_hive_active_key_here

# Trading Parameters
HIVE_TOKEN_PAIR=BEE:SWAP.HIVE       # Token pair to trade
HIVE_BUY_THRESHOLD=5                # Buy when price drops X% below last price
HIVE_SELL_THRESHOLD=2               # Sell when profit reaches X%
HIVE_TRADE_AMOUNT=10                # Amount of base currency (SWAP.HIVE) per trade
HIVE_MAX_POSITION=100               # Maximum total exposure in base currency
HIVE_STOP_LOSS=10                   # Stop loss at -X% loss
HIVE_CHECK_INTERVAL=60000           # Check market every X milliseconds (60000 = 1 minute)

# Safety
HIVE_DRY_RUN=true                   # IMPORTANT: Set to 'false' for live trading (PAPER TRADING by default)

# Notifications
HIVE_DISCORD_WEBHOOK=your_discord_webhook_url_here
