# Van Kush Bot - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ========================================
# DISCORD BOT
# ========================================
DISCORD_TOKEN=your_discord_bot_token
DISCORD_APPLICATION_ID=your_application_id
HIVE_DISCORD_WEBHOOK=your_discord_webhook_url

# ========================================
# GOOGLE / GEMINI AI
# ========================================
# Get key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key

# ========================================
# HIVE BLOCKCHAIN
# ========================================
HIVE_USERNAME=your_hive_account
HIVE_ACTIVE_KEY=your_hive_active_key
HIVE_POSTING_KEY=your_hive_posting_key

# ========================================
# VAN KUSH MARKET MAKER
# ========================================
# DRY_RUN: Set to 'false' to enable live trading (BE CAREFUL!)
MM_DRY_RUN=true

# Price nudging strategy
MM_NUDGE_INCREMENT=0.00000010
MM_MAX_NUDGES_DAY=10
MM_NUDGE_INTERVAL=3600000  # 1 hour in milliseconds

# Safety limits
MM_MAX_JUMP=0.05  # Max 5% price jump per nudge
MM_SELL_TRIGGER=0.10  # 10%+ is considered sell trigger

# Wall sizes (in HIVE)
MM_BUY_WALL_SIZE=50
MM_SUPPORT_SIZE=25

# Whale tracking threshold
MM_MIN_WHALE=100000  # 100k tokens = whale

# Optional: Discord webhook for market maker notifications
MM_DISCORD_WEBHOOK=your_discord_webhook_url

# ========================================
# HIVE-ENGINE TRADING BOT
# ========================================
HIVE_BOT_DRY_RUN=true
HIVE_BOT_MAX_TRADE_SIZE=100
HIVE_BOT_STOP_LOSS=0.05  # 5%
HIVE_BOT_TAKE_PROFIT=0.15  # 15%

# ========================================
# OPTIONAL: GOOGLE MAPS
# ========================================
GOOGLE_MAPS_API_KEY=your_google_maps_key
