    "known_issues": {
      "websocket_timer_expired": {
        "affects": "Ubuntu 16.04, kernel > 4.4",
        "fix": [
          "cd ~/steem/libraries/fc/vendor/websocketpp",
          "git remote set-url origin https://github.com/DECENTfoundation/websocketpp.git",
          "git fetch",
          "git checkout",
          "Then rebuild"
        ]
      }
    }
